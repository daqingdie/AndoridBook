            android:name=".book.AdminAddBookActivity"
            android:label="新增图书" />
        <activity
            android:name=".order.OrderDetailActivity"
            android:label="订单详情" />
        <activity android:name=".LoadActivity" android:theme="@style/AppTheme.Full">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>