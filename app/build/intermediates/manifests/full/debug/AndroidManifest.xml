<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.book"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.book.MainActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.book.actor.UserActivity"
            android:label="个人中心" />
        <activity
            android:name="com.example.book.cart.ShopCartActivity"
            android:label="我的购物车" />
        <activity
            android:name="com.example.book.order.OrderActivity"
            android:label="我的订单" />
        <activity
            android:name="com.example.book.actor.AdminActivity"
            android:label="管理员平台" />
        <activity
            android:name="com.example.book.book.BookDetailActivity"
            android:label="图书详情" />
        <activity
            android:name="com.example.book.others.SettingActivity"
            android:label="设置" />
        <activity
            android:name="com.example.book.actor.LoginActivity"
            android:label="登录系统" />
        <activity
            android:name="com.example.book.actor.RegisterActivity"
            android:label="注册成为用户" />
        <activity
            android:name="com.example.book.actor.AdminUserActivity"
            android:label="管理用户"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.example.book.book.AdminBookActivity"
            android:label="管理图书"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.example.book.order.AdminOrderActivity"
            android:label="管理订单" />
        <activity
            android:name="com.example.book.book.AdminAddBookActivity"
            android:label="新增图书" />
        <activity
            android:name="com.example.book.order.OrderDetailActivity"
            android:label="订单详情" />
        <activity
            android:name="com.example.book.LoadActivity"
            android:theme="@style/AppTheme.Full" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>