<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.book.book.BookDetailActivity"
    android:background="@drawable/bg2"
    android:weightSum="1">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:id="@+id/book_detail_list_view"
        ></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="bottom"
        >

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            style="@style/button_buy"
            android:id="@+id/button_add_order" />

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/button_add_cart"
            android:layout_marginLeft="10dp"
            android:id="@+id/button_add_shop_cart" />
    </LinearLayout>


</LinearLayout>
